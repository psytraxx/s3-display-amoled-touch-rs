import { HorizontalBox, VerticalBox, Button, CheckBox } from "std-widgets.slint";
export component AppWindow inherits Window {
    in-out property <string> text: "Please touch the button \nto update the PMU reading";
    in-out property <image> status-icon: @image-url("../assets/battery.png");
    width: 536px;
    height: 240px;

    default-font-size: 22px;

    callback request-update();
    HorizontalBox {
        preferred-width: 0cm;

        Text {
            text: root.text;
        }

        VerticalBox {

            alignment: LayoutAlignment.start;

            Image {
                source: root.status-icon;
                width: 40px;
                height: 40px;
            }

            Button {
                primary: true;
                text: "Update";
                width: 120px;
                height: 80px;
                clicked => {
                    root.request-update();
                }
            }
        }
    }
}
